#include <bits/stdc++.h>
 
using namespace std;
 
int main()
{
  int x,y,h1,w1,h2,w2;
  cin>>x>>y;
 
  char a[x][y];
  for(int i=0; i<x; i++)
    {for(int j=0; j<y; j++)
    {
        cin>>a[i][j];
        if(a[i][j]=='S'){
            h1=i;
            w1=j;
        }
        if(a[i][j]=='X'){
            h2=i;
            w2=j;
        }}
 
 
    }
 cout<<abs(h1-h2)+abs(w1-w2);
 
