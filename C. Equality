#include <bits/stdc++.h>
 
using namespace std;
int main(){
int t;
 cin>>t;
 while(t--){
        int n;
        cin>>n;
 int a[n];
        int mini, maxi;
 for(int i=0; i<n; i++){
 
    cin>>a[i];
 }
 mini=maxi=a[0];
 for(int i=0; i<n; i++){
    if(a[i]<mini)
    mini=a[i];
    if(a[i]>maxi)
        maxi=a[i];
 
 }
 
  cout<<maxi-mini<<endl;
 }
